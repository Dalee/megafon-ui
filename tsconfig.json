{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./packages",
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "target": "es5",
    "lib": [
      "esnext",
      "dom"
    ],
    "moduleResolution": "node",
    "types": [
      "react",
      "node",
      "jest"
    ]
  }
}
