{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src",
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "target": "es5",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "types": [
      "react",
      "node",
      "jest"
    ]
  },
  "include": ["typings/**/*", "src/**/*.ts", "src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.ts","src/**/*.test.tsx"]
}
