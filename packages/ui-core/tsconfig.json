{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src",
    // "strictNullChecks": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    // "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "es5",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    // "incremental": true,
    "types": [
      "react",
      "node"
    ]
  },
  "include": ["typings/**/*", "src/**/*.ts", "src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.ts","src/**/*.test.tsx"]
}

